{% extends "base.html.twig" %}
    
{% block content %}
    <div class="backg-login">
        <div id="form-login">
            <!-- Form-login -->
        
            <div class="login">
                <div class="container d-flex justify-content-center"><h1><img src="medias/logo-dgma.png" alt="Logo DGMA" width="335" height="100"></h1></div>
                <p class="text-center"><em class="fas fa-user-lock"></em></p>
                
                <form action="index.php" method="POST">
                    <div class="form-group">
                        <!-- Entry username -->
                        <label for="username">Identifiant</label>
                        <input type="text" class="form-control" name="username" spellcheck="false">
                    </div>
                    <div class="form-group">
                        <!-- Entry password -->
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                        <!-- button submit -->
                        <button type="submit" class="btn btn-primary btn-lg" name="submit">SE CONNECTER</button>
                </form>
            </div>
        </div>
    </div>
    
{% endblock content %}