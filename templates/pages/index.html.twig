{% extends "base.html.twig" %}
    
{% block content %}
    <div class="backg-login">
        <div id="form-login">
            <!-- Form-login -->
        
            <div class="login">
                <div class="container d-flex justify-content-center"><h1><img src="medias/logo-dgma.png" alt="Logo DGMA" width="335" height="100"></h1></div>
                <p class="text-center"><em class="fas fa-user-lock"></em></p>
                
                <form name="user_login_form" action="index.php" method="POST" class="needs-validation" novalidate>
                    <div class="form-group">
                        <!-- Entry username -->
                        <label for="username">Identifiant</label>
                        <input type="text" class="form-control" name="pseudo" spellcheck="false" required>
                        <div class="invalid-feedback">
                            Veuillez entrer un identifiant valide
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <!-- Entry password -->
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" name="mdp" required>
                        <div class="invalid-feedback">
                            Veuillez entrer un mot de passe valide
                        </div>
                    </div>
                    
                        
                        <!-- button submit -->
                        <div class="form-group"><button type="submit" class="btn btn-primary btn-lg" name="submit">SE CONNECTER</button></div>
                        
                </form>
            </div>
        </div>
    </div>
    
{% endblock content %}
    {% block javascript %}
    <script src="js/script-valid.js"></script>
    <script src="https://kit.fontawesome.com/d5dcbc8efb.js" crossorigin="anonymous"></script>
    {% endblock javascript %}